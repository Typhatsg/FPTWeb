@model IEnumerable<FPTWeb.Data.Publisher>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoundingYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherAddress)
            </td>
            <td>
                    @if (!string.IsNullOrEmpty(item.PublisherLogo))
                    {
                        <img src="/uploads/@Html.DisplayFor(modelItem => item.PublisherLogo)" alt="user" style="width: 100px; height: 100px">
                    }
                    else
                    {
                        <p>No photo available</p>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoundingYear)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PublisherId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PublisherId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PublisherId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
